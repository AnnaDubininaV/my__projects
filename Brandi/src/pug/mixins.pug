mixin link(href, name)
	a(href=href)&attributes(attributes)= name
		if(block)
			block



mixin card(cardClass, iconName, cardImage, cardBody, title, description)
	.card(class=cardClass)
		if(iconName)
			figure.card-image.icon.rounded-circle
				span(class=iconName)
		else
			figure.card-image
				img(src=cardImage, alt= "card-image")
		if(cardBody)
			.card-body
				h4.card-title=title
				p.card-text=description

