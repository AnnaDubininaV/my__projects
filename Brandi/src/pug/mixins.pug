mixin list-item-sosial(className, item)
	li(class="list-group-item border-0 "  + className)
		+link(item.url)(class="icon-social " + item.classname)

mixin list-item-icon(className, item)
	li(class="list-group-item border-0 "  + className)
		span(class= item.classname)

mixin list-item-primary(className, item)
	li(class="list-group-item border-0 "  + className)&attributes(attributes)= item
		
		
mixin list(list, listClass, listDescr)
	ul(class="list " + listClass)
		if(listDescr=="social")
			each item in list
				+list-item-sosial("d-flex justify-content-center align-items-center icon", item)
		else if(listDescr=="icon")
			each item in list
				+list-item-icon("rounded-circle d-flex justify-content-center align-items-center icon", item)
		else
			each item in list
				+list-item-primary(item.classname, item.description)
					

